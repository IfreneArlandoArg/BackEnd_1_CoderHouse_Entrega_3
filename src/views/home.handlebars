
<div class="d-flex justify-content-between align-items-center mb-4">
  <a href="/" class="btn btn-transparent">
    <h1 class="text-success">Lista de productos (Home)</h1>
  </a>
  <a href="/realtimeproducts" class="btn btn-success">
    Gestionar Productos
  </a>
</div>

<table class="table table-striped table-bordered shadow">
  <thead class="table-dark">
    <tr>
      <th>TÃ­tulo</th>
      <th>Precio</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
      <tr>
        <td><a href="/products/{{this._id}}">{{this.title}}</a></td>
        <td>${{this.price}}</td>
        <td>
          <form action="/api/carts/{{../cartId}}/products/{{this._id}}" method="post" style="display:inline;">
            <button type="submit" class="btn btn-primary btn-sm">Agregar al carrito</button>
          </form>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>

<nav aria-label="Page navigation">
  <ul class="pagination justify-content-center">
    {{#if hasPrevPage}}
      <li class="page-item"><a class="page-link" href="/products?page={{prevPage}}">Anterior</a></li>
    {{else}}
      <li class="page-item disabled"><span class="page-link">Anterior</span></li>
    {{/if}}
    <li class="page-item active"><span class="page-link">{{currentPage}}</span></li>
    {{#if hasNextPage}}
      <li class="page-item"><a class="page-link" href="/products?page={{nextPage}}">Siguiente</a></li>
    {{else}}
      <li class="page-item disabled"><span class="page-link">Siguiente</span></li>
    {{/if}}
  </ul>
</nav>
