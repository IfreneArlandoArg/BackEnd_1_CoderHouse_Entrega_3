<div class="card shadow mb-4" style="max-width: 500px; margin: 0 auto;">
  <div class="card-body">
    <h2 class="card-title mb-3">{{product.title}}</h2>
    <h5 class="card-subtitle mb-2 text-muted">Categoría: {{product.category}}</h5>
    <p class="card-text mb-2"><strong>Descripción:</strong> {{product.description}}</p>
    <p class="card-text mb-2"><strong>Precio:</strong> <span class="badge bg-success">${{product.price}}</span></p>
    <p class="card-text mb-3"><strong>Stock:</strong> <span class="badge bg-secondary">{{product.stock}}</span></p>
    <form action="/api/carts/{{cartId}}/products/{{product._id}}" method="post" class="d-flex align-items-center gap-2">
      <input type="number" name="quantity" min="1" value="1" class="form-control w-auto" style="max-width: 80px;" required>
      <button type="submit" class="btn btn-primary">Agregar al carrito</button>
    </form>
    <a href="/products" class="btn btn-link mt-3">&larr; Volver a productos</a>
  </div>
</div>
